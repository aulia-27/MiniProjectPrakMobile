<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent"
    tools:context=".PengingatActivity">

    <TextView
        android:id="@+id/beranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="35dp"
        android:text="Jadwal Pengingat"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/beranda"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Pengingat Jadwal Makan"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Pengingat untuk memiliki waktu makan anda"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tbl1"
        android:layout_below="@id/title2"
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>

            <ImageView
                android:id="@+id/sarapan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/title2"
                android:layout_marginLeft="10dp"
                android:src="@drawable/breakfast" />
            <TextView
                android:id="@+id/makanpagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title2"
                android:layout_marginLeft="10dp"
                android:text="Makan Pagi"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/jam1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/title2"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@id/makanpagi"
                android:src="@drawable/ic_baseline_access_time_24" />

            <TextView
                android:id="@+id/waktuMakanpagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title2"
                android:layout_marginRight="100dp"
                android:layout_toRightOf="@id/jam1"
                android:text="07:00 - 09:00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


        </TableRow>
        <TableRow>
            <ImageView
                android:id="@+id/iconMakanSiang"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_below="@id/title2"
                android:layout_marginLeft="10dp"
                android:src="@drawable/lunchtime" />
            <TextView
                android:id="@+id/makansiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/makanpagi"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Makan Siang"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/jam2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/makanpagi"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/makanpagi"
                android:src="@drawable/ic_baseline_access_time_24" />

            <TextView
                android:id="@+id/waktuMakansiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/makanpagi"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/jam2"
                android:text="12:00 - 14:00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow>
            <ImageView
                android:id="@+id/iconMakanMalam"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_below="@id/title2"
                android:layout_marginLeft="10dp"
                android:src="@drawable/dinner" />

            <TextView
                android:id="@+id/makanmalam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/makansiang"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:text="Makan Malam"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/jam3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/makansiang"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/makanpagi"
                android:src="@drawable/ic_baseline_access_time_24" />


            <TextView
                android:id="@+id/waktuMakanmalam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/makansiang"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/jam3"
                android:text="18:00 - 20:00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/titletidur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbl1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="Pengingat Jadwal Tidur"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleinfotidur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titletidur"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="Pengingat untuk waktu tidur anda"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tbl2"
        android:layout_below="@id/titleinfotidur"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <ImageView
                android:id="@+id/rest"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/title2"
                android:layout_marginLeft="10dp"
                android:src="@drawable/rest" />
            <TextView
                android:id="@+id/jadwaltidur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleinfotidur"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="Waktu Tidur"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/jam4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/titleinfotidur"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/makanpagi"
                android:src="@drawable/ic_baseline_access_time_24" />

            <TextView
                android:id="@+id/editJadwaltidur"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleinfotidur"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="66dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/jadwaltidur"
                android:text="21:00 - 23:00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/infoTidur"

        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbl2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="info tidur sehat : Anak usia sekolah usia 6–13 tahun: 9–11 jam per hari. Remaja usia 14–17 tahun: 8–10 jam per hari. Dewasa muda usia 18–25 tahun: 7–9 jam per hari. Dewasa usia 26–64 tahun: 7–9 jam per hari."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>